<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cvMascota"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/toptext">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="@dimen/layoutmargin"
        android:layout_marginRight="@dimen/layoutmargin"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/top"
            android:scaleType="centerCrop"
            android:src="@drawable/finn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/hueso"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/hueso_normal" />


                <TextView
                    android:id="@+id/nombreCV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="23dp"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="@dimen/toptext"
                    android:layout_toEndOf="@+id/hueso"
                    android:layout_toRightOf="@+id/hueso"
                    android:text="@string/pnombre"
                    android:textSize="@dimen/nombre_cardview" />

                <TextView
                    android:id="@+id/nlikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/toptext"
                    android:layout_toLeftOf="@+id/imageButton2"
                    android:layout_toStartOf="@+id/imageButton2"
                    android:text="@string/likes"
                    android:textSize="@dimen/nombre_cardview" />

                <ImageButton

                    android:id="@+id/imageButton2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/hueso_amarillo" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>